extends layout

block content
  h1= title
  - let bat=results
  div(class="container-fluid")
  div(class="row m-1")
   each b,index in bat
    - let destination = `dispatch(\"/bat/update?id=${b._id}\")`
    div(class="col-sm-2" class="m-1") #{b.bat_type}, #{b.bat_size}, #{b.bat_cost}
     button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
   function dispatch(path){
   window.location.href=path
   }